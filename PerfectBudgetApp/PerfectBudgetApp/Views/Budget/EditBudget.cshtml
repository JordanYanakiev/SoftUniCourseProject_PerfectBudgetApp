@model EditBudgetViewModel

@{
    ViewBag.Title = "Add Money to Budget";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Amount" class="form-label">Amount</label>
                <input asp-for="@Model.Amount" class="form-control" aria-required="true" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="mb-3">
                 <form class="input-group-sm" asp-route-budgetId="@Model.Id" asp-controller="Budget" asp-action="EditBudget" method="post">
                      <input class="btn btn-primary" type="submit" value="Edit Budget" />
                </form>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}