@using PerfectBudgetApp.Models.Loans;

@model ApproveLoanViewModel

@{
    ViewBag.Title = "Approve Loan";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                @*<p>Loan asker: @Model.LoanAskerNickName</p>*@
                @*<p>RequestedAmount: @Model.RequestedAmount</p>*@
                @*<p>Loan purpouse: @Model.LoanName</p>*@
            </div>

            <div class="mb-3">
                <label asp-for="@Model.LoanName" class="form-label">Loan asker</label>
                <input asp-for="@Model.LoanAskerNickName" class="form-control" aria-required="true" />
                <span asp-validation-for="LoanName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.LoanName" class="form-label">Requested amount</label>
                <input asp-for="@Model.RequestedAmount" class="form-control" aria-required="true" />
                <span asp-validation-for="LoanName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.LoanName" class="form-label">Loan purpouse</label>
                <input asp-for="@Model.LoanName" class="form-control" aria-required="true" />
                <span asp-validation-for="LoanName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.LoanGiverNickName" class="form-label">Loan giver nickname</label>
                <input asp-for="@Model.LoanGiverNickName" class="form-control" aria-required="true" />
                <span asp-validation-for="LoanGiverNickName" class="text-danger"></span>

                <label asp-for="@Model.ReleasedAmount" class="form-label">Released amount</label>
                <input asp-for="@Model.ReleasedAmount" class="form-control" aria-required="true" />
                <span asp-validation-for="ReleasedAmount" class="text-danger"></span>
            </div>
            <div class="mb-3">
                @*<label asp-for="@Model.Budgets" class="form-label">Budgets</label>
                <select asp-for="@Model.Budgets" class="form-control" >
                    @foreach (var budget in @Model.Budgets)
                    {
                        <option value="@budget.Amount"> @budget.Name - @budget.Amount</option>
                    }
                </select>
                <span asp-validation-for="@Model.Budgets" class="text-danger"></span>*@
                <label asp-for="@Model.Budgets" class="form-label">Budgets</label>
                <select asp-for="@Model.Budgets" name="budgets" id="budgets">
                    @foreach (var budget in @Model.Budgets)
                    {
                        <option value="@budget.Id"> @budget.Name - @budget.Amount</option>
                    }                    
                </select>
                <span asp-validation-for="@Model.Budgets" class="text-danger"></span>

            </div>
            
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Approve Loan" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}