@using PerfectBudgetApp.Models.Expenses;

@model CreateExpenseViewModel

@{
    ViewBag.Title = "Create Expense";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.Category" class="form-label">Name</label>
                <input asp-for="@Model.Category" class="form-control" aria-required="true" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ExpenceAmount" class="form-label">Amount</label>
                <input asp-for="@Model.ExpenceAmount" class="form-control" aria-required="true" />
                <span asp-validation-for="ExpenceAmount" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>

